<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLibreria.DetailsPage"
             Title="DetailsPage">
    <VerticalStackLayout>
        <Label x:Name="Nombre"
           Text="Nombre"
           FontSize="32"
           HorizontalOptions="Center"/>
        <Label x:Name="Autor"
            Text="Autor"
            FontSize="32"
            HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Cantidad: "
                FontSize="18"/>
            <Label x:Name="Cantidad"
                Text="Cantidad"
                FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Precio: "
                FontSize="18"/>
            <Label x:Name="Precio"
                Text="Precio"
                FontSize="18"/>
        </StackLayout>
        <Button Text="Regresar"
        Clicked="OnClickRegresarMain"
        FontSize="20"
        Margin="5"
        HorizontalOptions="FillAndExpand"
        BackgroundColor="Red"/>

    </VerticalStackLayout>
</ContentPage>