<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLibreria.MainPage" Title="Login">
   
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection >
                    <TextCell Text="Usuario"/>
                    <EntryCell
                                   x:Name="Usuario"
                           Placeholder="Usuario"/>
                    <TextCell Text="Contrasena"/>
                    <EntryCell x:Name="Contrasena"
                           Placeholder="Contrasena"/>
                    

                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Iniciar sesion"
            Clicked="OnClickIniciarSesion"/>
        <Label 
            Text="No tiene cuenta"
            FontSize="30"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Crear sesion"
        Clicked="OnClickCrearSesion"/>

    </VerticalStackLayout>
</ContentPage>
