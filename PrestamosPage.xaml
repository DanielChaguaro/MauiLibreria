<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLibreria.PrestamosPage"
             Title="Prestamos">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Realizar Prestamo">
                    <EntryCell x:Name="IdLibro"
            Placeholder="IdLibro"/>
                    <EntryCell x:Name="Cantidad"
            Placeholder="Cantidad"/>
                   
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Realizar Prestamo"
        Clicked="OnClickRealizarPrestamo"/>
    </VerticalStackLayout>
</ContentPage>